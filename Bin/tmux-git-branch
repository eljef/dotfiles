# shellcheck source=/home/dev/Bin/include/eljef-bash-common
. "${HOME}/Bin/include/eljef-bash-common"

if [[ -n "${1}" ]]; then
    cd_or_error "${1}"
fi

OUTPUT=$(git branch 2> /dev/null | sed -e '/^[^*]/d' -e 's/* \(.*\)/\1/')
if [[ -z ${OUTPUT} ]]; then
    echo "(git: none)"
else
    echo "(git: ${OUTPUT})"
fi

