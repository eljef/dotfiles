. "${HOME}/Bin/include/eljef-bash-common"

check_installed "conky"

conky -d -o -b -p 5 -c ~/.config/conky/conky1/conky.conf &
conky -d -o -b -p 5 -c ~/.config/conky/conky2/conky.conf &
